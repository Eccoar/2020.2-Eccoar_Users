{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"outDir": "build",
		"types": ["jest"],
		"skipLibCheck": true
	},
	"include": ["src", "test"],
	"exclude": ["node_modules", "build"]
}